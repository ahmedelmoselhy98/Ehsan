<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="16dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_groceries"
                android:id="@+id/bank_account_image_imageview"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bank_account_name_textview"
                android:text="@string/bank_account_name_textview"
                android:padding="8dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bank_account_number_textview"
                android:text="@string/bank_account_number_textview"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                />

        </LinearLayout>


</android.support.v7.widget.CardView>